<div class='buttons'>
<%= link_to 'New Pet', new_user_pet_path(@user) %>
</div>
<div class='buttons'>
<%= link_to 'Edit Pet', edit_user_pet_path(@pet.user_id, @pet)%>
</div>

<br>
<p id='current_pet' data-id="<%= @pet.id%>"></p>
<div id='pet-container' data-id="<%= current_user.id %>">
</div>

<script>
  let id = document.querySelector('#pet-container').dataset.id
  let petID = document.querySelector('#current_pet').dataset.id
  fetch(`http://localhost:3000/users/${id}/pets/${petID}.json`)
    .then(res => res.json())
    .then(pet => {
      const { id, name, animal_type, breed, gender, birthdate, weight} = pet
      new Pet(id, name, animal_type, breed, gender, birthdate, weight)
    })
</script>