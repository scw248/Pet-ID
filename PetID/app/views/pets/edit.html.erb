<h1>Edit Pet</h1>
<%= render partial: 'errors_form' %> 

<%= form_for @pet, url: user_pet_path(@pet.user_id, @pet) do |f| %>
<%= f.hidden_field :user_id %>
<%= f.label :name%>
<%= f.text_field :name %>
<br>
<br>
<%= f.label :animal_type %>
<%= f.select :animal_type, Pet.allowed_types %> <br>
<br>
<%= f.label :breed %>
<%= f.select :breed, Pet.allowed_breeds %>
<br>
<br>
<%= f.label :gender %>
<%= f.select :gender, Pet.allowed_genders %>
<br>
<br>
<%= f.label :birthdate %>
<%= f.date_select :birthdate %>
<br>
<br>
<%= f.label :weight %>
<%= f.number_field :weight %>
<br>
<br>
<%= f.label :image %>
<%= f.text_field :image %>
<br>
<br>
<%= f.submit %>
<br>
<br>
<br>
<% end %>
