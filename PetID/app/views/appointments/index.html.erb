<h2>Your Upcoming Appointments</h2>
<div>
<% @appointments.each do |appointment|%>
<p><%= link_to appointment.reason_for_visit, user_appointment_path(@user, appointment) %></p>
<br>
<p><%= appointment.date_time.strftime('%b %e, %l:%M %p') %></p>
<% end %>
</div>

<div class="buttons">
<%= link_to 'New Appointment', new_user_appointment_path(@user)%>
</div>

