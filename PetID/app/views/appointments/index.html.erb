<div class="buttons">
<%= link_to 'New Appointment', new_user_appointment_path(@user)%>
</div>
<br>
<h2>Your Upcoming Appointments</h2>
<div>
<% @appointments.each do |appointment|%>
<p>Reason for Visit: <%= link_to appointment.reason_for_visit, user_appointment_path(@user, appointment) %></p>
<br>
<p><b>Appt for:</b> <%= appointment.pet.name %></p><br>
<br>
<p>Vet: <%= appointment.vet_provider.name %></p>
<br>
<p>Date/Time: <%= appointment.date_time.strftime('%b %e, %l:%M %p') %></p>
<% end %>
</div>


