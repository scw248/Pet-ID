<%= form_for @appointment do |f| %>
<%= f.label :vet_provider %>
<%= f.collection_select :vet_provider, VetProvider.all, :vet_provider, :vet_provider%>
<br>
<br>
<%= f.label :reason_for_visit%>
<%= f.collection_select :reason_for_visit, Appointment.all, :reason_for_visit, :reason_for_visit %>
<br>
<br>
<%= f.label :date_time %>
<%= f.datetime_field :date_time %>
<br>
<br>
<%= f.submit %>
<br>
<br>
<br>
<% end %>