<%= form_for @appointment do |f| %>
<%= f.hidden_field :user_id %>
<%= f.pet %>
<%= f.collection_select :patient, Patient.all, :id, :name %>
<br>
<br>
<%= f.label :vet_provider %>
<%= f.collection_select :vet_provider, VetProvider.all, :id, :name %>
<br>
<br>
<%= f.label :reason_for_visit%>
<%= f.collection_select :reason_for_visit, Appointment.all, :reason_for_visit, :reason_for_visit %>
<br>
<br>
<%= f.label :date_time %>
<%= f.datetime_select :date_time %>
<br>
<br>
<%= f.submit %>
<br>
<br>
<br>
<% end %>