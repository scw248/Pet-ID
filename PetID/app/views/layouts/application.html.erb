<!DOCTYPE html>
<html>
  <head>
    <title>PetID</title>
     <link rel="stylesheet" href="/styles.css">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="topnav">
        <%= render 'devise/menu/welcome_items' %>
    </div>

    <div class='content'>
      <h2>PetMed</h2>
      <h4>Modern Healthcare for Your Pet</h4>
    </div>
    <div align="center">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    
    <%= yield %>

    </div>
    <div class="footer">
      <p>Footer</p>
    </div>
  </body>
</html>
