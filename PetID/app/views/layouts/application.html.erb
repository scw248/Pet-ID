<!DOCTYPE html>
<html>
  <head>
    <title>PetID</title>
     <link rel="stylesheet" href="/styles.css">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="topnav">
      <a href="#">Sign Up</a>
      <a href="#">Sign In</a>
    </div>

    <div class="content">
      <h2>PetID</h2>
      <p>Modern Healthcare for Your Pet</p>
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>

    <div class="footer">
      <p>Footer</p>
    </div>
  </body>
</html>
